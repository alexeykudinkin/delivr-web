/*= depend_on_asset 'footer.medium.bg.jpg' */
/*= depend_on_asset 'header.medium.bg.jpg' */

* {
    font-family: "Helvetica Neue", Arial, sans-serif;
    font-weight: 200;
}

html, body {
    height: 100%;
    width: 100%;
}

.marketing .col-lg-4 {
    text-align: center;
}

.welcome .intro {
    width: 100%;
    height: 100vh;
    background-image: url(<%= asset_path 'header.medium.bg.jpg' %>);
    background-attachment: fixed;
    background-position: center center;
    background-repeat: no-repeat;
    background-clip: border-box;
    -webkit-background-clip: border-box;
    -moz-background-clip: border-box;
    background-size: cover;
    -webkit-background-size: cover;
    -moz-background-size: cover;
}

.intro-name {
    padding-top: 25vh;
    font-size: 50pt;
    font-weight: 100;
}

.intro-cap {
    width: 50%;
    font-size: 35pt;
    font-weight: 100;
}

.intro-scroll {
    width: 10%;
    font-family: "Open Sans", serif;
    color: #ffffff;
}

.intro-form input, .outro button {
    font-family: "Open Sans", serif;
}

.intro-form .col-md-4,
.intro-form .col-md-8 {
    padding-right: 15px;
    padding-left: 0;
}

.intro-form .form-inline {
    width: 35%;
    box-sizing: border-box;
    margin-left: auto;
    margin-right: auto;
}

.intro-form .form-control, .intro-form .form-group {
    width: 100%;
}

.intro-name,
.intro-cap,
.intro-scroll {
    color: #ffffff;
    width: 100%;
    text-align: center;
}

.intro-scroll {
    position: absolute;
    bottom: 3%;
}

.welcome .outro {
    width: 100%;
    height: 350pt;
    background-image: url(<%= asset_path 'footer.medium.bg.jpg' %>);
    background-attachment: fixed;
    background-clip: border-box;
    -webkit-background-clip: border-box;
    -moz-background-clip: border-box;
    background-position: 50% 50%;
    background-repeat: no-repeat;
    background-size: cover;
    -webkit-background-size: cover;
    -moz-background-size: cover;
    line-height: 350pt;
    text-align: center;
}


.outro-content {
    display: inline-block;
    position: relative;
    line-height: 100%;
    font-size: 30pt;
    vertical-align: middle;
}

.intro-cap, .outro-cap {
    margin-bottom: 15pt;
}

.outro-cap p {
    font-weight: 100;
    color: #ffffff;
}

.bold {
    font-weight: 200;
}

.center {
    margin-right: auto;
    margin-left: auto;
}

.featurette-divider {
    margin: 45pt 0 30pt;
}

.featurette-header {
    position: relative;
    height: 50pt;
    line-height: 50pt;
    width: 100%;
    /*border: 1px #000000 dotted;*/
    text-align: center;
    font-size: 20pt;
    margin: 75pt 0 75pt 0;
}

.featurette-hr {
    display: inline-block;
    width: 34%;
}

.featurette-hr .hr-left, .featurette-hr .hr-right {
    /*background-color: #DADADA;*/
    display: inline-block;
    line-height: inherit;
    height: 1px;
    /*box-sizing: padding-box;*/
    vertical-align: middle;
    width: 100%;
}

.featurette-hr .hr-left {
    background-image: linear-gradient(to right, #eee 75%, #fff 100%);
    background-image: -webkit-linear-gradient(right, #eee 75%, #fff 100%);
    background-image: -moz-linear-gradient(right, #eee 75%, #fff 100%);
    /*background-image: radial-gradient(farthest-side at right top, #f0f0f0, rgba(244,244,244,0));*/
    /*background-image: -webkit-radial-gradient(farthest-side at right top, #f0f0f0, rgba(244,244,244,0));*/
    /*background-image: -moz-radial-gradient(farthest-side at right top, #f0f0f0, rgba(244,244,244,0));*/
}

.featurette-hr .hr-right {
    background-image: linear-gradient(to left, #eee 75%, #fff 100%);
    background-image: -webkit-linear-gradient(left, #eee 75%, #fff 100%);
    background-image: -moz-linear-gradient(left, #eee 75%, #fff 100%);
    /*background-image: radial-gradient(farthest-side at left top, #f0f0f0, rgba(244,244,244,0));*/
    /*background-image: -webkit-radial-gradient(farthest-side at left top, #f0f0f0, rgba(244,244,244,0));*/
    /*background-image: -moz-radial-gradient(farthest-side at left top, #f0f0f0, rgba(244,244,244,0));;*/
}


.welcome .featurette-header .featurette-heading {
    display: inline-block;
    height: inherit;
    line-height: inherit;
    width: 30%;
}

.welcome .featurette-header .featurette-heading, .lead {
    font-family: "Helvetica Neue", Arial, sans-serif;
    font-weight: 100;
}

.welcome .featurette-heading {
    margin-top: 0;
}

.welcome .footer {
    margin-bottom: 20pt;
}

#thanking-modal .modal-body {
    font-size: 13pt;
}

.welcome .input {
    font-family: monospace;
    background-color: #f5f5f5;
    box-shadow: 1px 1px 1px #dadada;
    -webkit-box-shadow: 1px 1px 1px #dadada;
    -moz-box-shadow: 1px 1px 1px #dadada;
    border-radius: 1px;
    -webkit-border-radius: 1px;
    -moz-border-radius: 1px;
    padding-left: 5pt;
    padding-right: 5pt;
}

form input.invalid {
    outline: none;
    border-color: #ff7076;
    border-top-color: #ff5c61;
    -webkit-box-shadow: inset 0 1px 3px rgba(0, 0, 0, 0), 0 1px 0 rgba(255, 255, 255, 0), 0 0 2px 0 rgba(255, 0, 0, 0.5);
    -moz-box-shadow: inset 0 1px 3px rgba(0, 0, 0, 0), 0 1px 0 rgba(255, 255, 255, 0), 0 0 2px 0 rgba(255, 0, 0, 0.5);
    box-shadow: inset 0 1px 3px rgba(0, 0, 0, 0), 0 1px 0 rgba(255, 255, 255, 0), 0 0 2px 0 rgba(255, 0, 0, 0.5)
}

.welcome #map-canvas {
  width: 100% !important;
  height: 350pt;
  margin-bottom: 50pt;
}