<div class="container">

  <div class="row">

    <div class="col-sm-6 col-md-6 col-sm-offset-3 col-md-offset-3">

      <%= form_for @user, as: :user, url: admin_users_path do |form| %>

        <div class="form-group">
          <%= form.text_field     :name,      placeholder: "Name",
                                              class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.email_field    :email,     placeholder: "Email",
                                              class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.phone_field    :phone,     placeholder: "Phone",
                                              class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.password_field :password,  placeholder: "Password",
                                              class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.password_field :password_confirmation,   placeholder: "Confirm",
                                                            class: "form-control" %>
        </div>

        <div class="form-group">
          <% %w(Customer Performer Admin).each_with_index do |role, i| %>
            <div class="form-group">
              <%= form.radio_button :role, role, i == 0 && { checked: true } || {} %> <%= role %>
            </div>
          <% end %>
        </div>

        <div class="form-group">
          <%= form.submit value: "Register", class: "btn btn-primary" %>
        </div>

      <% end %>

    </div>

  </div>

</div>
