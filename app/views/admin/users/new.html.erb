<div class="container">

  <div class="row">

    <div class="col-sm-4 col-md-4 col-sm-offset-4 col-md-offset-4">

      <%= form_for @user, as: :user, url: admin_users_path do |form| %>

        <div class="form-group">
          <%= form.text_field     :name,      placeholder: "Name",
                                              class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.email_field    :email,     placeholder: "Email",
                                              class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.phone_field    :phone,     placeholder: "Phone",
                                              class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.password_field :password,  placeholder: "Password",
                                              class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.password_field :password_confirmation,   placeholder: "Confirm",
                                                            class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.select :role, %w(Customer Performer Admin), {}, { class: "form-control" } %>
        </div>

        <div class="form-group">
          <%= form.submit value: "Register", class: "btn btn-primary" %>
        </div>

      <% end %>

    </div>

  </div>

</div>
