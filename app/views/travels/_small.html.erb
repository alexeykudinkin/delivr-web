
<style type="text/css">

  .box {
    background-color: rgba(250, 250, 250, .5);
    text-align: center;
    border: 1px dashed rgba(200, 200, 200, .5);
  }

  .target {
    overflow-x: hidden;
  }

  .towards {
    padding-top: 5pt;
    padding-bottom: 5pt;
  }

  .box-body {
    margin: 10pt;
  }

</style>

<div class="box">

  <div class="box-body container-fluid">

    <div class="row">

      <div class="target">

        <div id="origin" class="origin list-group-item" data-coordinates="<%= travel.origin.coordinates %>">

          <h5 class="list-group-item-heading">

            <%= travel.origin.address %>

          </h5>

        </div>

      </div>

      <span class="towards glyphicon glyphicon-arrow-down"></span>

      <div class="target">

        <div id="destinations" class="list-group">

          <% travel.destinations.each do |destination| %>

            <div class="destination list-group-item" data-coordinates="<%= destination.coordinates %>">

              <h5 class="list-group-item-heading">

                <%= destination.address %>

              </h5>

              <% if destination.items.length > 0 %>

                <div class="destination-items-list list-group">

                  <% destination.items.each do |item| %>

                    <span class="list-group-item">
                      <%= item.name %>
                    </span>
                    <p class="list-group-item-text">
                      <%= item.description %>
                      <%= item.weight %>
                    </p>

                  <% end %>

                </div>

              <% end %>

            </div>

          <% end %>

        </div>

      </div>

    </div>

  </div>

</div>