<%  ng_model_prefix = local_assigns[:ngmodel_prefix]

    ng_model_name         = "#{ng_model_prefix}.name"
    ng_model_description  = "#{ng_model_prefix}.description"
    ng_model_weight       = "#{ng_model_prefix}.weight"
    ng_model_time         = "#{ng_model_prefix}.time" %>

<div class="container-fluid">

  <div class="item row">

    <div class="item-details col-md-8 col-sm-8" ng-form="itemSubForm">

      <div class="form-group">
          <%= form.text_field :name,  name:         "name",
                                      placeholder:  "Name",
                                      class:        "form-control",
                                      ng_model:     ng_model_name,
                                      ng_required:  true %>
      </div>

      <div class="form-group">
          <%= form.text_field :weight,  name:         "weight",
                                        placeholder:  "Weight",
                                        class:        "form-control",
                                        ng_model:     ng_model_weight,
                                        ng_required:  true %>
      </div>

      <div class="form-group">
          <%= form.text_area :description,  name:         "description",
                                            placeholder:  "Description",
                                            class:        "form-control",
                                            ng_model:     ng_model_description %>
      </div>

    </div>

    <div class="timepicker col-md-4 col-sm-4" ng-controller="TimepickerController">

      <timepicker ng-model      ="<%= ng_model_time %>"
                  hour-step     ="settings.timepicker.hourStep"
                  minute-step   ="settings.timepicker.minuteStep"
                  show-meridian ="settings.timepicker.isMeridian"></timepicker>

    </div>

  </div>

</div>