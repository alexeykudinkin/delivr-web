
<% content_for :map_overlay do %>

  <div class="map-overlay">

    <div class="col-sm-8 col-sm-offset-2">

      <div class="row">

        <div class="panel panel-default">

          <div class="panel-body">

            <%= render 'travels/large', travel: @travel %>

            <span class="label label-info"> <%= @travel.state.to_s %> </span>

          </div>

        </div>

      </div>

    </div>

  </div>

  <script type="text/javascript">

    $(".destination-items-list").hide();
    $("div .destination").hover(function() {
      $(".destination-items-list", $(this))
          .stop(true, true)
          .slideToggle();
    });

  </script>

<% end %>