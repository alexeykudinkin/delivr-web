<!DOCTYPE html>
<html>

<head>

  <meta name="viewport" content="initial-scale=1.0, user-scalable=no" />

  <title>Delivr</title>

  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>

  <%= javascript_include_tag "https://maps.googleapis.com/maps/api/js?v=release&libraries=places&sensor=true&key=AIzaSyCH-W-G8oHPVT647mSRseuSvRhLUWMQPps" %>

  <%= javascript_include_tag "https://ajax.googleapis.com/ajax/libs/angularjs/1.3.0-beta.16/angular.js" %>
  <%= javascript_include_tag "https://ajax.googleapis.com/ajax/libs/angularjs/1.3.0-beta.16/angular-animate.js" %>

  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>

  <%= csrf_meta_tags %>

  <style type="text/css">

    * {
      font-family: "Helvetica Neue", Arial, sans-serif;
      font-weight: 200;
    }

    html, body {
      height: 100%;
      width: 100%;
    }

    body, #map-canvas {
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
    }

    #map-canvas {
      width: auto;
      height: auto;
      margin-top: 50px;
      z-index: 1;
    }

    /*#map-overlay {*/
    .map-overlay {
      position: relative;
      z-index: 100;
    }

    .content {
      margin-top: 50pt;
    }

  </style>

</head>

<body ng-app="delivr" ng-strict-di>

  <%= render 'layouts/navbar' %>

  <div class="content">

    <div class="container" ng-controller="DelivrEnvironmentController">

      <% unless alert.blank? %>
        <div class="map-overlay alert alert-danger">
          <%= alert %>
          <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times</span></button>
        </div>
      <% end %>

      <% if content_for? :map_overlay %>

        <%= yield :map_overlay %>
        <div id="map-canvas" google-map></div>

      <% else -%>

        <%= yield %>

      <%  end -%>

    </div>

  </div>

  <script>

    $(document).ready(function() {
//      shipper.init()
    });

  </script>

</body>
</html>
